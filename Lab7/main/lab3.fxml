<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #292929;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ControllerLab3">
   <children>
      <Label alignment="CENTER" prefHeight="50.0" prefWidth="800.0" style="-fx-background-color: #2F2F2F;" text="LAB 3" textAlignment="CENTER" textFill="#f9f9f9">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Label>
      <VBox alignment="TOP_CENTER" layoutY="50.0" prefHeight="550.0" prefWidth="800.0" spacing="25.0">
         <children>
            <TextArea fx:id="textAreaOutput" editable="false" prefHeight="250.0" prefWidth="800.0" style="-fx-background-color: #E4E4E4;" wrapText="true">
               <padding>
                  <Insets left="25.0" />
               </padding>
               <font>
                  <Font size="30.0" />
               </font>
            </TextArea>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="800.0" spacing="10.0">
               <children>
                  <TextField fx:id="textFieldInput" prefHeight="25.0" prefWidth="600.0" promptText="enter something">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <Button fx:id="btnAppend" alignment="CENTER" mnemonicParsing="false" onAction="#onButtonClickEvent" prefHeight="40.0" prefWidth="100.0" text="Append" textAlignment="CENTER">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="GAUSSIAN" color="#e54a3cd8" height="0.0" offsetX="5.0" offsetY="5.0" radius="0.0" width="0.0" />
                     </effect>
                  </Button>
               </children>
               <padding>
                  <Insets left="25.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="800.0" spacing="25.0">
               <children>
                  <Button fx:id="btnReverse" alignment="CENTER" mnemonicParsing="false" onAction="#onButtonClickEvent" prefHeight="50.0" prefWidth="200.0" text="Reverse" textAlignment="CENTER">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="GAUSSIAN" color="#e54a3cd8" height="0.0" offsetX="5.0" offsetY="5.0" radius="0.0" width="0.0" />
                     </effect>
                  </Button>
                  <Button fx:id="btnClear" alignment="CENTER" mnemonicParsing="false" onAction="#onButtonClickEvent" prefHeight="50.0" prefWidth="200.0" text="Clear" textAlignment="CENTER">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="GAUSSIAN" color="#e54a3cd8" height="0.0" offsetX="5.0" offsetY="5.0" radius="0.0" width="0.0" />
                     </effect>
                  </Button>
                  <Button fx:id="btnDeleteChar" alignment="CENTER" mnemonicParsing="false" onAction="#onButtonClickEvent" prefHeight="50.0" prefWidth="200.0" text="Delete char" textAlignment="CENTER">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="GAUSSIAN" color="#e54a3cd8" height="0.0" offsetX="5.0" offsetY="5.0" radius="0.0" width="0.0" />
                     </effect>
                  </Button>
               </children>
            </HBox>
            <Button fx:id="btnUndo" alignment="CENTER" mnemonicParsing="false" onAction="#onButtonClickEvent" prefHeight="50.0" prefWidth="200.0" text="Undo" textAlignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font>
               <effect>
                  <DropShadow blurType="GAUSSIAN" color="#e54a3cd8" height="0.0" offsetX="5.0" offsetY="5.0" radius="0.0" width="0.0" />
               </effect>
            </Button>
         </children>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
